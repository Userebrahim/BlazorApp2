    <h2>Add Task</h2>
    <form>
        <div class="form-group">
            <label class="label" for="task-name">Task Name:</label>
            <input type="text" id="task-name" class="input-field" required>
        </div>
        <div class="form-group">
            <label class="label" for="task-description">Task Description:</label>
            <textarea id="task-description" class="input-field" required></textarea>
        </div>
        <div class="form-group">
            <label class="label" for="task-due-date">Due Date:</label>
            <input type="date" id="task-due-date" class="input-field" required>
        </div>
        <button class="button" type="submit">Add Task</button>
    </form>
    <br/>
    <h2>Add Volunteer</h2>
    <form>
        <div class="form-group">
            <label class="label" for="volunteer-name">Volunteer Name:</label>
            <input type="text" id="volunteer-name" class="input-field" required>
        </div>
        <div class="form-group">
            <label class="label" for="volunteer-email">Volunteer Email:</label>
            <input type="email" id="volunteer-email" class="input-field" required>
        </div>
        <div class="form-group">
            <label class="label" for="volunteer-phone-number">Volunteer Phone Number:</label>
            <input type="tel" id="volunteer-phone-number" class="input-field" required>
        </div>
        <button class="button" type="submit">Add Volunteer</button>
    </form>
</div>
</html>